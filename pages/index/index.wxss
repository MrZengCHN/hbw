/* pages/index/index.wxss */
.indexContainer{
  display: flex;
  flex-direction:column;
  align-items: center;
}
.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
}
.username{
  font-size: 32rpx;
  margin: 100rpx 0;
}
.out{
  height: 300rpx;
  width: 500rpx;
  background-color: rgb(20, 236, 208);
  border-radius: 5rpx;
  text-align: center;
  
}
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  height: 100%;
  width: 100%;
}
.navContainer{
  margin-top: 30rpx;
  display: flex;
}
.navItem{
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  background-color: #00b5ad;
  color: #fff;
  margin: 10px 0;
  
}
.navItem text{
  font-size: 26rpx;
}
.recommendContainer{
  padding: 60rpx 20rpx;
}
.recommendContainer .header .title{
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}
.recommendContainer .header .more{
  float: right;
  border: 1rpx solid #333;
  font-size: 22rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}
.recommendContainer .header {
  padding-bottom: 20rpx;
}
/* 推荐内容区 */
.srollItem{
  width: 200rpx;
  margin-right:20rpx;
}
.srollItem image{
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
}
.srollItem text{
  font-size: 26rpx;
  /* 单行文本溢出 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.recommendScroll{
  display: flex;
}



/* pages/forum/forum.wxss */
page {
  background-color: rgb(243, 243, 243);
}

.card {
  width: 100%;
  height: 250px;
  background: #fff;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
}

.user-row {
  width: 100%;
  height: 20px;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
}

.point {
  width: 10px;
  height: 10px;
  border-radius: 100%;
  margin-top: 5px;
  margin-left: 15px;
}

.user {
  color: #666;
  font-size: 32rpx;
  margin-left: 5px;
  line-height: 20px;
}

.title-row {
  font-size: 36rpx;
  margin-left: 15px;
  margin-top: 5px;
}

.content-row {
  font-size: 32rpx;
  color: #666;
  padding: 5px 15px;
  overflow:hidden;
  height: 154rpx;
}

.book-row {
  width: 95%;
  height: 85px;
  background: rgb(250, 250, 250);
  margin: 0 auto;
  margin-top: 5px;
}

.book-row image {
  width: 150rpx;
  height: 75px;
  margin-top: 5px;
}

.book-row .left {
  width: 70%;
  height: 90px;
  float: right;
  display: flex;
  flex-direction: column;
}

.book-row .left .title {
  font-size: 26rpx;
  color: #666;
  margin-top: 15px;
}

.book-row .left .author, .book-row .left .press {
  font-size: 26rpx;
  color: #999;
  line-height: 1em;
  margin-top: 10px;
}

.book-row .left .author {
  font-size: 26rpx;
  margin-top: 15px;
}

.comment-row {
  font-size: 24rpx;
  color: #999;
  margin-right: 15px;
  margin-top: 8px;
  text-align: right;
}