/* pages/user/index.wxss */
.header{
  padding: 20rpx;
  display: flex;
}

.avater{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgb(0, 128, 128,0.4);
  margin-right: 20rpx;
}
.header .userInfo{
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
}
.header .userInfo text{
  padding-top: 12rpx;
}
.operateContainer{
  margin-top: 10rpx;
  padding: 0rpx 10rpx;
}
.infoContainer{
  display: flex;
  align-items: center;
}
.infoContainer .item{
  padding: 0rpx 25rpx;
  margin: 10rpx;
  width: 33%;
  display: flex;
  align-items: center;
  border:1rpx solid rgba(0, 128, 128, 0.3);
  border-radius: 10rpx;
}
.item .iconfont{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 50rpx;
  font-size: 25rpx;
  background-color: #00b5ad;
  color: #fff;
  margin: 10px 0;
}
.item text{
  margin-left: 10rpx;
}
.data{
  height: 30rpx;
  width: 30rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: #ff695e;
  color: #fff;
  border-radius: 50%;
}